---
import { footerConfig } from '../data/site';

const { copyright, socialLinks } = footerConfig;
---

<footer class="py-12 border-t border-white/5 bg-[#060606]">
  <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4 text-[10px] font-bold tracking-[0.3em] uppercase text-[#dadada] opacity-40">
    <div>{copyright}</div>
    <div class="flex gap-8">
      {socialLinks.map((link) => (
        <a href={link.href} class="hover:text-[#75f991] transition-colors">
          {link.label}
        </a>
      ))}
    </div>
  </div>
</footer>
