---
interface SocialLink {
  label: string;
  href: string;
}

interface Props {
  copyright?: string;
  socialLinks?: SocialLink[];
}

const { 
  copyright = "© 2024 LIHAT.SITE — DEVELOPER SHOWCASE",
  socialLinks = [
    { label: "GITHUB", href: "#" },
    { label: "LINKEDIN", href: "#" },
    { label: "RESUME", href: "#" }
  ]
} = Astro.props;
---

<footer class="py-12 border-t border-white/5 bg-[#060606]">
  <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4 text-[10px] font-bold tracking-[0.3em] uppercase text-[#dadada] opacity-40">
    <div>{copyright}</div>
    <div class="flex gap-8">
      {socialLinks.map((link) => (
        <a href={link.href} class="hover:text-[#75f991] transition-colors">
          {link.label}
        </a>
      ))}
    </div>
  </div>
</footer>
