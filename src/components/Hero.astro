---
import { heroConfig } from '../data/site';

const { badge, title, description } = heroConfig;
---

<section class="relative pt-40 pb-24 px-6 overflow-hidden">
  <!-- Background elements -->
  <div class="hero-bg"></div>
  
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="max-w-3xl text-center mx-auto">
      <div class="inline-block px-3 py-1 rounded-full border border-[#75f991]/30 text-[#75f991] text-[10px] font-bold tracking-widest uppercase mb-6 bg-[#060606]/50 backdrop-blur-sm">
        {badge}
      </div>
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tighter mb-8 uppercase">
        {title.line1} <br/>
        {title.line2} <span class="text-[#75f991]">{title.highlighted}</span>.
      </h1>
      <p class="text-[#dadada] md:text-lg leading-relaxed md:opacity-80">
        {description}
      </p>
    </div>
  </div>
</section>
