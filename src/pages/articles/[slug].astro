---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

type Props = {
  article: CollectionEntry<'articles'>;
};

const { article } = Astro.props;
const { Content } = await article.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString('id-ID', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}
---

<Layout title={`${article.data.title} - Artikel`} description={article.data.description}>
  <article class="min-h-screen py-16 px-6 sm:px-8 max-w-3xl mx-auto selection:bg-accent/30 selection:text-white">
    <!-- Navigation -->
    <nav class="mb-12">
      <a href="/articles" class="inline-flex items-center gap-2 text-zinc-500 hover:text-white transition-colors text-sm group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Kembali ke Artikel
      </a>
    </nav>

    <!-- Header Section -->
    <header class="mb-12">
      <div class="flex items-center gap-3 text-xs font-medium text-accent mb-4">
        <time datetime={article.data.date.toISOString()}>{formatDate(article.data.date)}</time>
        {article.data.tags && article.data.tags.length > 0 && (
          <>
            <span class="text-zinc-800">•</span>
            <div class="flex gap-2">
              {article.data.tags.map(tag => <span class="text-zinc-500">#{tag}</span>)}
            </div>
          </>
        )}
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight tracking-tight">
        {article.data.title}
      </h1>
      
      {article.data.description && (
        <p class="text-xl text-[#eaeaea]/80 leading-relaxed font-medium mb-2">
          {article.data.description}
        </p>
      )}
      
      <div class="text-sm text-zinc-500 flex items-center gap-2">
        <span>Ditulis oleh</span>
        <span class="text-white/90 font-medium">{article.data.author || 'Admin'}</span>
      </div>
    </header>

    <!-- Subtle Minimalist Divider -->
    <div class="h-px bg-zinc-800/50 mb-12"></div>

    <!-- Article Content Area -->
    <div class="prose-reader">
      <Content />
    </div>

    <!-- Minimalist Footer -->
    <footer class="mt-20 pt-10 border-t border-zinc-800/50">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
        <a href="/articles" class="text-zinc-500 hover:text-white transition-colors text-sm">
          ← Lihat artikel lainnya
        </a>
        <button 
          id="copy-link"
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-zinc-900 border border-zinc-800 hover:border-zinc-700 text-zinc-400 hover:text-white rounded-full text-xs font-bold tracking-widest uppercase transition-all"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
          </svg>
          Salin Tautan
        </button>
      </div>
    </footer>
  </article>

  <!-- Notification Toast -->
  <div id="toast" class="fixed bottom-10 left-1/2 -translate-x-1/2 px-6 py-3 bg-white text-black text-xs font-bold uppercase tracking-widest rounded-full shadow-2xl opacity-0 transform translate-y-4 transition-all duration-300 pointer-events-none z-50">
    Tautan berhasil disalin
  </div>
</Layout>

<style is:global>
  /* Base Reading Typography */
  .prose-reader {
    color: #eaeaea;
    font-size: 1.125rem;
    line-height: 1.85;
    letter-spacing: 0.01em;
  }

  /* Headings - Pure White */
  .prose-reader h1, 
  .prose-reader h2, 
  .prose-reader h3, 
  .prose-reader h4 {
    color: white;
    font-weight: 700;
    margin-top: 3.5rem;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }

  .prose-reader h2 { font-size: 1.75rem; border-bottom: none; padding-bottom: 0; }
  .prose-reader h3 { font-size: 1.45rem; }

  /* Paragraphs and Text Elements */
  .prose-reader p {
    margin-bottom: 1.75rem;
  }

  .prose-reader strong {
    color: white;
    font-weight: 600;
  }

  .prose-reader em {
    color: #d1d1d1;
  }

  /* Links - Minimalist but visible */
  .prose-reader a {
    color: #75f991;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
    transition: all 0.2s;
  }

  .prose-reader a:hover {
    color: #34d399;
    text-decoration-thickness: 2px;
  }

  /* Lists */
  .prose-reader ul, 
  .prose-reader ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    list-style-position: outside;
  }

  .prose-reader ul {
    list-style-type: disc;
  }

  .prose-reader ol {
    list-style-type: decimal;
  }

  .prose-reader li {
    margin-bottom: 0.5rem;
    padding-left: 0.25rem;
  }

  .prose-reader li::marker {
    color: #75f991;
    font-weight: bold;
  }

  /* Blockquote */
  .prose-reader blockquote {
    border-left: 3px solid #75f991;
    padding: 0.5rem 0 0.5rem 1.5rem;
    margin: 2.5rem 0;
    font-style: italic;
    color: #ccc;
  }

  /* Code Styling */
  .prose-reader code:not(pre code) {
    background: rgba(255, 255, 255, 0.05);
    color: #75f991;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: inherit;
  }

  .prose-reader pre {
    background: #0d0d0d;
    padding: 1.5rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 2.5rem 0;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .prose-reader pre code {
    background: none;
    padding: 0;
    color: #d4d4d8;
    font-size: 0.9rem;
  }

  /* Horizontal Rule */
  .prose-reader hr {
    border: none;
    border-top: 1px solid #27272a;
    margin: 4rem 0;
  }

  /* Image Responsive */
  .prose-reader img {
    border-radius: 12px;
    margin: 3rem 0;
    max-width: 100%;
    height: auto;
  }

  /* Selection colors */
  ::selection {
    background: rgba(117, 249, 145, 0.3);
    color: white;
  }

  /* Mobile Optimization */
  @media (max-width: 640px) {
    .prose-reader {
      font-size: 1rem; /* 16px for better mobile reading */
      line-height: 1.75;
    }

    .prose-reader h1 {
      font-size: 2rem;
      margin-top: 2rem;
      line-height: 1.2;
    }
    
    .prose-reader h2 {
      font-size: 1.5rem;
      margin-top: 2.5rem;
    }

    .prose-reader h3 {
      font-size: 1.25rem;
    }

    .prose-reader pre {
      padding: 1rem;
      margin: 1.5rem 0;
      font-size: 0.85rem;
    }
  }
</style>

<script>
  const copyBtn = document.getElementById('copy-link');
  const toast = document.getElementById('toast');

  copyBtn?.addEventListener('click', async () => {
    try {
      if (typeof window !== 'undefined' && navigator.clipboard) {
        await navigator.clipboard.writeText(window.location.href);
        if (toast) {
          toast.classList.remove('opacity-0', 'translate-y-4');
          toast.classList.add('opacity-100', 'translate-y-0');
          setTimeout(() => {
            toast.classList.remove('opacity-100', 'translate-y-0');
            toast.classList.add('opacity-0', 'translate-y-4');
          }, 2000);
        }
      }
    } catch (err) {
      console.error('Failed to copy link:', err);
    }
  });
</script>
